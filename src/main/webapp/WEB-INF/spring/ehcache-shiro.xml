<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
	<!-- maxElementsInMemory为缓存对象的最大数目, eternal设置是否永远不过期, timeToIdleSeconds对象处于空闲状态的最多秒数, 
		timeToLiveSeconds对象处于缓存状态的最多秒数 -->
	<diskStore path="java.io.tmpdir" />
	<defaultCache maxElementsInMemory="1000000" eternal="false"
		timeToIdleSeconds="300000" timeToLiveSeconds="120000" overflowToDisk="true" />
	<cache name="shiroAuthorizationCache" maxElementsInMemory="300000"
		eternal="false" timeToLiveSeconds="360000" timeToIdleSeconds="360000" overflowToDisk="false" />

</ehcache>