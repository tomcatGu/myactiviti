<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
	<!-- maxElementsInMemory为缓存对象的最大数目, eternal设置是否永远不过期, timeToIdleSeconds对象处于空闲状态的最多秒数, 
		timeToLiveSeconds对象处于缓存状态的最多秒数 -->
	<diskStore path="java.io.tmpdir" />
	<defaultCache maxElementsInMemory="1000" eternal="false"
		timeToIdleSeconds="30000" timeToLiveSeconds="12000" overflowToDisk="true" />
	<cache name="shiroAuthorizationCache" maxElementsInMemory="30000"
		eternal="false" timeToLiveSeconds="36000" timeToIdleSeconds="36000" overflowToDisk="false" />

</ehcache>